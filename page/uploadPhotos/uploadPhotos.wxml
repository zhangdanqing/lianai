<import src="../../template/courseList.wxml"/>
<view class="regist">
    <view wx-if="{{isToastShow}}">
        <template is="toast-box" data="{{...toastData}}"/>
    </view>
    <image class="banner" mode="aspectFill" src="../../img/banner1.png"></image>
    <text class="title">上传信息 成为链爱会员</text>
    <view class="block"></view>
    <view class="content">
        <form bindsubmit="formSubmit">
            <view class="section">
                <view class="section__title">请上传一张身份证正面照片</view>
                <image wx:for="{{idTempFilePaths}}" wx:key="index" class="upload-image" src="{{item}}"></image>
                <view wx:if="{{isShowAddiD}}" class="upload-image-box">
                    <image src="../../img/add.png" class="upload-photos" data-show="isShowAddiD" data-arr="idTempFilePaths" bindtap="uploadPhoto"></image>
                </view>
            </view>
            <view class="section">
                <view class="section__title">请上传最精美生活照一张</view>
                <image wx:for="{{checkboxTempFilePaths}}" wx:key="index" class="upload-image" src="{{item}}"></image>
                <view wx:if="{{isShowAddPhoto}}" class="upload-image-box">
                    <image src="../../img/add.png" class="upload-photos" data-show="isShowAddPhoto" data-arr="checkboxTempFilePaths" bindtap="uploadPhoto"></image>
                </view>
            </view>
            <view class="checkbox clearfix">
                <checkbox-group bindchange="checkboxChange">
                    <label class="checkbox" >
                        <checkbox color="#f95b5c" checked="{{checkbox}}" value="{{checkbox}}" name="checkbox" />
                        <view class="agree">
                            <text>我已阅读并且同意链爱的</text>
                            <navigator url="/page/index/index">服务条款</navigator>
                        </view>
                    </label>
                </checkbox-group>
            </view>
            <button class="regist-btn" form-type="submit">注册</button>
        </form>
    </view>
    <view class="success-opa" wx:if="{{successShow}}">
        <view class="success-content">
            <text>恭喜{{xcxName}}注册成功</text>
            <text>请添加管理员微信，发送此页截图给管理员，加入链爱微信社群</text>
            <image class="code-image" src="../../img/code.jpg"></image>
            <button class="success-btn" bindtap="confirm">确定</button>
        </view>
    </view>
</view>
